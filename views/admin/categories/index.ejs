<%- include('../../partials/header.ejs');%>
    <%- include('../../partials/navbar.ejs');%>

        <div class="container">
            <hr>
            <h2>Categorias</h2>
            <hr>
            <a class="btn btn-success" href="/admin/categories/new">Criar nova categoria</a>
            <hr>
            <table class=" table table-striped table-hover">
                <thead>
                    <tr>
                        <th class="table-primary">ID</th>
                        <th class="table-primary">Título</th>
                        <th class="table-primary">Rota</th>
                        <th class="table-primary">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% categories.forEach(category=> { %>
                        <tr>
                            <th>
                                <%= category.id%>
                            </th>
                            <th>
                                <%= category.title%>
                            </th>
                            <th>
                                <%= category.titleRoute%>
                            </th>
                            <th>
                                <a href="/admin/categories/edit/<%= category.id%>" class="btn btn-warning">Editar</a>
                                <a href="/categories/delete/<%= category.id%>" class="btn btn-danger"
                                    onclick="deletar()">Excluir</a>
                            </th>
                        </tr>

                        <%})%>
                </tbody>
            </table>
        </div>
        <%- include('../../partials/footer.ejs');%>

            <script>
                function deletar() {
                    alert('Você deletou a categoria')
                }
            </script>